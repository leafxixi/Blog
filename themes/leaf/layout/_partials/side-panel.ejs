
<% if (is_home()) { %> 

<header class="panel-cover">
     <!-- <canvas id="demo-canvas"></canvas> -->
<% } else { %>
<header class="panel-cover panel-cover--collapsed">
<% } %>

  <div class="panel-main">

  
    <div class="panel-main__inner panel-inverted">
      <div class="panel-main__content">

        <% if (theme.logo) { %>
        <a href="/" title="link to homepage for <%= config.title %>"><img src="<%= theme.logo %>" width="80" alt="<%= config.title %> logo" class="panel-cover__logo logo" /></a>
        <% } %>

        <%  var title_str = config.title;%>
        <%  var title_arr = title_str.match(/./g);%>
        <%  for (var i in title_arr){%>
        <%      if(title_arr[i]=='â™ '){%>
        <%          title_class = 'panel-title-leaf-S';%>
        <%      }else{%>
        <%            var random = Math.random()*4; %>
        <%            if(random>=0 && random<1){ %>
        <%              title_class = 'panel-title-leaf-SW'; %>
        <%            } %>
        <%            if(random>=1 && random<2){ %>
        <%              title_class = 'panel-title-leaf-SE'; %>
        <%            } %>
        <%            if(random>=2 && random<3){ %>
        <%              title_class = 'panel-title-leaf-NW'; %>
        <%            } %>
        <%            if(random>=3 && random<=4){ %>
        <%              title_class = 'panel-title-leaf-NE'; %>
        <%            } %>
        <%      }%>
        
                <li class="<%= title_class %>"><%= title_arr[i] %></li>
        <%  } %>

        <hr class="panel-cover__divider" />

        <% if (config.subtitle) { %>
        <p class="panel-cover__description">
          <%= config.subtitle %>
        </p>
        <hr class="panel-cover__divider panel-cover__divider--secondary" />
        <% } %>

        <div class="navigation-wrapper">

          <nav class="cover-navigation cover-navigation--primary">
            <ul class="navigation">

              <% for (var i in theme.menu){ %>
                <%
                  if (theme.menu[i]+'' == '/#blog') {
                    nav_btn_class = 'blog-button';
                  } else {
                    nav_btn_class = '';
                  }
                  if (is_home()) {
                    nav_class='navigation__item';
                  }else{
                    nav_class='navigation__item-leaf';
                  }

                %>
                <li class="<%= nav_class %>"><a href="<%- theme.menu[i] %>" title="" class="<%= nav_btn_class %>"><%= i %></a></li>
              <% } %>

            </ul>
          </nav>
        </div>
        <%- partial('_partials/social') %>
      </div>
      <%if (!is_home()){  %>
      <%- partial('_partials/article-bar') %>
      <%  } %>
      

    </div>

    <div class="panel-cover--overlay"></div>
  </div>



</header>